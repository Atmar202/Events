@model Events.Models.AddEvents

@{
    ViewData["Title"] = "Ürituse lisamine";
}

<!-- HERO HEADER -->
<partial name="_TinyHeaderPartial" />

<!-- HERO -->
<div class="bg-white mb-4">
    <div class="col-xl-5 mx-auto p-4">
        <form asp-action="Create" class="mb-4">
            <h4 style="color: var(--bg);">@ViewData["Title"]</h4>
            <div class="form-group row p-1">
                <label asp-for="Nimi" class="col-lg-4 col-form-label">@Html.DisplayNameFor(model => model.Nimi):</label>
                <div class="col-sm-8">
                    <input asp-for="Nimi" class="form-control" />
                    <span asp-validation-for="Nimi" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-1">
                <label asp-for="Toimumisaeg" class="col-lg-4 col-form-label">@Html.DisplayNameFor(model => model.Toimumisaeg):</label>
                <div class="col-sm-8">
                    <input asp-for="Toimumisaeg" class="form-control bg-white datetimepicker" type="datetime" placeholder="pp.kk.aaaa hh:mm" autocomplete="off" readonly/>
                    <span asp-validation-for="Toimumisaeg" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-1">
                <label asp-for="Koht" class="col-lg-4 col-form-label">@Html.DisplayNameFor(model => model.Koht):</label>
                <div class="col-sm-8">
                    <input asp-for="Koht" class="form-control" />
                    <span asp-validation-for="Koht" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-1">
                <label asp-for="Lisainfo" class="col-lg-4 col-form-label">@Html.DisplayNameFor(model => model.Lisainfo):</label>
                <div class="col-sm-8">
                    <textarea asp-for="Lisainfo" class="form-control"></textarea>
                    <span asp-validation-for="Lisainfo" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-5">
                <a onclick="history.back()" class="btn py-1 m-1" style="background-color: #e1e1e1;">Tagasi</a>
                <input type="submit" value="Salvesta" class="btn text-white py-1 m-1" style="background-color: var(--bg);" />
            </div>
        </form>
    </div>
</div>

<link href="~/lib/jquery-datetimepicker/jquery.datetimepicker.css" rel="stylesheet" />
<link href="~/lib/jquery-datetimepicker/jquery.datetimepicker.min.css" rel="stylesheet" />

@section Scripts {

    <script src="~/lib/jquery-datetimepicker/jquery.datetimepicker.full.js"></script>
    <script src="~/lib/jquery-datetimepicker/jquery.datetimepicker.full.min.js"></script>
    <script src="~/lib/jquery-datetimepicker/jquery.datetimepicker.js"></script>
    <script src="~/lib/jquery-datetimepicker/jquery.datetimepicker.min.js"></script>

    <script>

        $(function () {
          $(".datetimepicker").datetimepicker({
              format: "d.m.Y H:i",
              theme: 'dark'
            });
        });

    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}