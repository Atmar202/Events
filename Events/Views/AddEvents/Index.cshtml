@model Events.Models.AddEvents

@{
    ViewData["Title"] = "Lisa üritus";
}

<!-- HERO HEADER -->
<div class="row g-0">
    <div class="col col-lg-3 bg p-3 text-white text-center"><h2>Ürituse lisamine</h2></div>
    <div class="col" style="background-image: url('../Img/libled.jpg'); background-size: cover;"></div>
</div>

<!-- HERO -->
<div class="bg-white mb-4">
    <div class="p-4 d-flex align-items-center justify-content-center">
        <!-- FORM ACTION? -->
        <form asp-action="Create" class="mb-4">
            <h4 style="color: var(--bg);">Ürituse lisamine</h4>
            <div class="form-group row p-1">
                <!-- class="control-label" -->
                <label asp-for="Nimi" class="col-lg-4 col-form-label">Ürituse nimi:</label>
                <div class="col-sm-8">
                    <input asp-for="Nimi" class="form-control" />
                    <span asp-validation-for="Nimi" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-1">
                <label asp-for="Toimumisaeg" class="col-lg-4 col-form-label">Toimumisaeg:</label>
                <div class="col-sm-8">
                    <input asp-for="Toimumisaeg" class="form-control" />
                    <span asp-validation-for="Toimumisaeg" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-1">
                <label asp-for="Koht" class="col-lg-4 col-form-label">Koht:</label>
                <div class="col-sm-8">
                    <input asp-for="Koht" class="form-control" />
                    <span asp-validation-for="Koht" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-1">
                <label asp-for="lisainfo" class="col-lg-4 col-form-label">Lisainfo:</label>
                <div class="col-sm-8">
                    <input asp-for="lisainfo" class="form-control" />
                    <span asp-validation-for="lisainfo" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-5">
                <a onclick="history.back()" class="btn py-1 m-1" style="background-color: #e1e1e1;">Tagasi</a>
                <input type="submit" value="Salvesta" class="btn text-white py-1 m-1" style="background-color: var(--bg);" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }