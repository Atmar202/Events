@{
    ViewData["Title"] = "Lisa üritus";
}

<!-- HERO HEADER -->
<div class="row g-0">
    <div class="col col-lg-3 bg p-3 text-white text-center"><h2>Ürituse lisamine</h2></div>
    <div class="col" style="background-image: url('../Img/libled.jpg'); background-size: cover;"></div>
</div>

<!-- HERO -->
<div class="bg-white mb-4">
    <div class="p-4 d-flex align-items-center justify-content-center">
        <!-- FORM ACTION? -->
        <form class="mb-4">
            <h4 style="color: var(--bg);">Ürituse lisamine</h4>
            <div class="form-group row p-1">
                <label for="inputNimi" class="col-lg-4 col-form-label">Ürituse nimi:</label>
                <div class="col-sm-8">
                    <input type="nimi" class="form-control" id="inputNimi" required>
                </div>
            </div>
            <div class="form-group row p-1">
                <label for="inputAeg" class="col-lg-4 col-form-label">Toimumisaeg:</label>
                <div class="col-sm-8">
                    <input type="aeg" class="form-control" id="inputAeg" placeholder="pp.kk.aaaa hh:mm" required>
                </div>
            </div>
            <div class="form-group row p-1">
                <label for="inputKoht" class="col-lg-4 col-form-label">Koht:</label>
                <div class="col-sm-8">
                    <input type="koht" class="form-control" id="inputKoht" required>
                </div>
            </div>
            <div class="form-group row p-1">
                <label for="inputInfo" class="col-lg-4 col-form-label">Lisainfo:</label>
                <div class="col-sm-8">
                    <textarea class="form-control" id="inputInfo" type="info" rows="3"></textarea>
                </div>
            </div>
            <div class="mt-5">
                <a onclick="history.back()" class="btn py-1 m-1" style="background-color: #e1e1e1;">Tagasi</a>
                <button type="submit" class="btn text-white py-1 m-1" style="background-color: var(--bg);">Edasi</button>
            </div>
        </form>
    </div>
</div>