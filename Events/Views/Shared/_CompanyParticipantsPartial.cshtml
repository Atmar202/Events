@model Events.Models.EventsDetailsViewModel

<div class="col-md-4">
    <form action="@Url.Action("CreateCompanyParticipant")" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EventsId" value="@Model.Events.Id" />
        <div class="form-group">
            <label asp-for="companyParticipantsModel.Nimi" class="control-label"></label>
            <input asp-for="companyParticipantsModel.Nimi" class="form-control" />
            <span asp-validation-for="companyParticipantsModel.Nimi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="companyParticipantsModel.Registrikood" class="control-label"></label>
            <input asp-for="companyParticipantsModel.Registrikood" class="form-control" />
            <span asp-validation-for="companyParticipantsModel.Registrikood" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="companyParticipantsModel.Osavõtjate_arv" class="control-label"></label>
            <input asp-for="companyParticipantsModel.Osavõtjate_arv" class="form-control" />
            <span asp-validation-for="companyParticipantsModel.Osavõtjate_arv" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="companyParticipantsModel.Maksmiseviis" class="control-label"></label>
            <select asp-for="companyParticipantsModel.Maksmiseviis" class="form-select">
                <option>Sularaha</option>
                <option>Pangaülekanne</option>
            </select>
            <span asp-validation-for="companyParticipantsModel.Maksmiseviis" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="companyParticipantsModel.Lisainfo" class="control-label"></label>
            <input asp-for="companyParticipantsModel.Lisainfo" class="form-control" />
            <span asp-validation-for="companyParticipantsModel.Lisainfo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
